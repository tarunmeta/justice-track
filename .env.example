# ============================================
# JusticeTrack - Environment Variables
# ============================================
# Copy this file and rename to .env (server) or .env.local (client)

# --- Server (.env in /server) ---
DATABASE_URL=postgresql://user:password@host:5432/justicetrack?schema=public
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
PORT=4000
NODE_ENV=production
CORS_ORIGIN=https://your-frontend.vercel.app

# --- Client (.env.local in /client) ---
# Set this in Vercel Dashboard > Environment Variables
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com/api
